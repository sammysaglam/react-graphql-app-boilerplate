{
	"author": "Sammy Saglam <sami@saglam.tk>",
	"private": "true",
	"version": "1.0.0",
	"main": "index.js",
	"scripts": {
		"start": "npm run dev",
		"dev": "yarn gen-gql-flowtypes && USE_WEBPACKDEV_SERVER=true nodemon src/server/server.js --watch src/server --ext js,graphql & webpack-dev-server --hot --history-api-fallback --env.hot=true --open",
		"build": "yarn gen-gql-flowtypes && webpack --env.production=true",
		"analyze": "yarn gen-gql-flowtypes && webpack --env.analyze=true",
		"lint": "\"./node_modules/.bin/eslint\" .",
		"lint:fix": "\"./node_modules/.bin/eslint\" . --fix",
		"test": "jest",
		"test:watch": "jest --watchAll",
		"test:coverage": "jest --coverage",
		"serve:start": "pm2 start build/server/server.js",
		"serve:stop": "pm2 stop server && pm2 delete server",
		"serve": "node build/server/server.js",
		"watch": "webpack --progress --watch & nodemon build/server/server.js --watch build/server",
		"gen-gql-flowtypes": "yarn apollo schema:download gql-schema.temp.json --endpoint=src/server/schema.graphql && yarn apollo codegen:generate --queries=src/client/graphql/**/*.graphql --schema=gql-schema.temp.json --target=flow --addTypename --useFlowExactObjects"
	},
	"dependencies": {
		"apollo-boost": "^0.1.10",
		"apollo-server-express": "^1.4.0",
		"axe-prop-types": "^1.0.8",
		"body-parser": "^1.18.3",
		"compression": "^1.7.2",
		"cookies": "^0.7.1",
		"cors": "^2.8.4",
		"dotenv": "^6.0.0",
		"empty": "^0.10.1",
		"exenv": "^1.2.2",
		"express": "^4.16.3",
		"express-jwt": "^5.3.1",
		"express-ws": "^4.0.0",
		"graphql": "^0.13.2",
		"graphql-tools": "^3.0.5",
		"helmet": "^3.12.1",
		"node-fetch": "^2.1.2",
		"nodemailer": "^4.6.7",
		"object-filter": "^1.0.2",
		"object.map": "^1.0.1",
		"pm2": "^2.10.4",
		"prop-types": "^15.6.2",
		"react": "^16.4.1",
		"react-apollo": "^2.1.9",
		"react-dom": "^16.4.1",
		"react-router-dom": "^4.3.1",
		"react-virtualized": "^9.20.0",
		"reduce-object": "^0.1.3",
		"styled-components": "^3.3.3",
		"ws": "^5.2.1"
	},
	"devDependencies": {
		"apollo": "^1.5.0",
		"axe-markdown-loader": "^2.0.5",
		"babel-cli": "^6.26.0",
		"babel-core": "^6.26.3",
		"babel-jest": "^23.2.0",
		"babel-loader": "^7.1.4",
		"babel-plugin-static-fs": "^1.1.0",
		"babel-plugin-styled-components": "^1.5.1",
		"babel-plugin-transform-class-properties": "^6.24.1",
		"babel-plugin-transform-object-rest-spread": "^6.26.0",
		"babel-polyfill": "^6.26.0",
		"babel-preset-env": "^1.7.0",
		"babel-preset-flow": "^6.23.0",
		"babel-preset-react": "^6.24.1",
		"chromedriver": "^2.40.0",
		"clean-webpack-plugin": "^0.1.19",
		"copy-webpack-plugin": "^4.5.2",
		"css-loader": "^0.28.11",
		"dotenv-webpack": "^1.5.7",
		"enzyme": "^3.3.0",
		"enzyme-adapter-react-16": "^1.1.1",
		"eslint": "^5.0.1",
		"eslint-sammy-preset": "^7.0.1",
		"flow-bin": "^0.76.0",
		"flow-typed": "^2.5.1",
		"geckodriver": "^1.11.0",
		"generate-asset-webpack-plugin": "^0.3.0",
		"html-minifier": "^3.5.17",
		"imagemin-webpack-plugin": "^2.1.5",
		"jest": "^23.2.0",
		"jest-cli": "^23.2.0",
		"jest-transform-graphql": "^2.1.0",
		"jsonminify": "^0.4.1",
		"node-sass": "^4.9.0",
		"nodemon": "^1.17.5",
		"optimize-css-assets-webpack-plugin": "^4.0.3",
		"react-hot-loader": "^4.3.3",
		"sass-loader": "^7.0.3",
		"selenium-webdriver": "^4.0.0-alpha.1",
		"style-loader": "^0.21.0",
		"svg-react-loader": "^0.4.5",
		"uglifyjs-webpack-plugin": "^1.2.7",
		"url-loader": "^1.0.1",
		"webpack": "^4.14.0",
		"webpack-bundle-analyzer": "^2.13.1",
		"webpack-cli": "^3.0.8",
		"webpack-dev-server": "^3.1.4",
		"webpack-node-externals": "^1.7.2"
	},
	"jest": {
		"moduleDirectories": [
			"node_modules",
			"src"
		],
		"transform": {
			"\\.(gql|graphql)$": "jest-transform-graphql",
			".*": "babel-jest"
		},
		"setupTestFrameworkScriptFile": "<rootDir>/tests-config/setup.js"
	}
}
