	"version": "1.0.0",
	"main": "index.js",
	"scripts": {
		"start": "npm run dev",
		"dev": "USE_WEBPACKDEV_SERVER=true nodemon src/server/server.js --watch src/server --ext js,graphql & webpack-dev-server --hot --history-api-fallback --env.hot=true --open",
		"build": "webpack --env.production=true",
		"analyze": "webpack --env.analyze=true",
		"lint": "\"./node_modules/.bin/eslint\" .",
		"lint:fix": "\"./node_modules/.bin/eslint\" . --fix",
		"test": "jest",
		"test:watch": "jest --watchAll",
		"test:coverage": "jest --coverage",
		"serve:start": "pm2 start build/server/server.js",
		"serve:stop": "pm2 stop server && pm2 delete server",
		"serve": "node build/server/server.js",
		"watch": "webpack --progress --watch & nodemon build/server/server.js --watch build/server"
	},
